<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    tools:context="com.example.comicuniverse.AllFragment.ManagerComic.AddChapterFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/border_edlogin"
        android:layout_margin="15dp"
        android:orientation="horizontal"
        android:weightSum="10">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"
            android:layout_weight="5"
            android:text="Name Comic"
            android:layout_gravity="center_vertical"
            android:textSize="18dp" />
        <Spinner
            android:id="@+id/id_idComic"
            android:layout_width="0dp"
            android:layout_weight="5"
            android:contentDescription="Category"
            android:layout_height="50dp"/>
    </LinearLayout>
    <EditText
        android:id="@+id/id_nameChapter"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Name chapter"
        android:layout_margin="15dp"
        android:autofillHints="nameCategory"
        android:inputType="text"
        android:padding="10dp"
        android:background="@drawable/border_edlogin"/>
    <EditText
        android:id="@+id/id_linkchapter"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Link chapter"
        android:layout_margin="15dp"
        android:autofillHints="nameCategory"
        android:inputType="text"
        android:padding="10dp"
        android:background="@drawable/border_edlogin"/>
    <Button
        android:id="@+id/id_addChapter"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="ThÃªm"
        android:background="@drawable/border_btn"/>

</LinearLayout>